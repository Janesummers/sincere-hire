.container .list {
  padding: 30rpx;
}
.container .list:last-of-type {
  margin-bottom: 0;
}
.container .list .item {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}
.container .list .item .little_title {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  color: #2b2b2b;
}
.container .list .item .text {
  font-size: 32rpx;
  font-weight: 500;
}
.container .bottom {
  position: fixed;
  bottom: 0;
  left: 50%;
  height: 58px;
  background: #fff;
  width: calc(100% - 60rpx);
  padding: 8px 0;
  box-sizing: border-box;
  transform: translateX(-50%);
  z-index: 100;
}
.container .bottom .btn {
  height: 100%;
  line-height: 42px;
  color: #fff;
  border-radius: 12rpx;
  background: #64bfba;
  text-align: center;
  font-size: 28rpx;
}
