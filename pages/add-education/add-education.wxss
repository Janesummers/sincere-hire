.shadowBox {
  position: fixed;
  z-index: 100000;
  background: #fff;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.shadowBox .loading {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  -webkit-background-size: 100%;
  background-size: 100%;
}
.container .picker {
  color: #737373;
}
.container .pickerActive {
  color: #1d1d1d;
}
.container .list {
  padding: 30rpx;
}
.container .list:last-of-type {
  margin-bottom: 0;
}
.container .list .item {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}
.container .list .item .little_title {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  color: #2b2b2b;
}
.container .list .item .text {
  font-size: 32rpx;
  font-weight: 500;
  position: relative;
}
.container .list .item .text .keyword {
  position: absolute;
  z-index: 1000;
  width: 100%;
  transition: 0.5s;
  max-height: 170px;
  background: #f3f3f3;
  overflow-y: scroll;
}
.container .list .item .text .keyword .word {
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #dbdada;
  margin: 0 30rpx;
}
.container .list .item .text .keyword .word:last-of-type {
  border-bottom: 0;
}
.container .bottom {
  position: fixed;
  bottom: 0;
  left: 50%;
  height: 58px;
  background: #fff;
  width: calc(100% - 60rpx);
  padding: 8px 0;
  box-sizing: border-box;
  transform: translateX(-50%);
  z-index: 100;
}
.container .bottom .btn {
  height: 100%;
  line-height: 42px;
  color: #fff;
  border-radius: 12rpx;
  background: #64bfba;
  text-align: center;
  font-size: 32rpx;
}
