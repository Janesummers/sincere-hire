page {
  background-color: #f0f3f6;
  padding-bottom: 48px;
}
.shadowBox {
  height: calc(100% - 195rpx) !important;
  top: 100rpx !important;
}
.container .top {
  width: 100%;
  display: flex;
  height: 100rpx;
  background: #fff;
  box-shadow: 0rpx 5rpx 30rpx rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}
.container .top .text {
  width: 50%;
  font-size: 36rpx;
  text-align: center;
  line-height: 100rpx;
  position: relative;
}
.container .top .text.active {
  color: #49bcc0;
}
.container .top .text.active::after {
  display: block;
  width: 50%;
  position: absolute;
  left: 50%;
  bottom: 0;
  height: 4px;
  background: #49bcc0;
  border-radius: 4px;
  content: '';
  transform: translateX(-50%);
}
.container .topic_list {
  margin-top: 100rpx;
  -webkit-overflow-scrolling: touch;
  overflow: hidden;
}
.container .topic_list .item {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.container .topic_list .item .title {
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.container .topic_list .item .small_content {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-bottom: 20rpx;
  color: #949494;
}
.container .topic_list .item .topic_type {
  display: flex;
  flex-wrap: wrap;
}
.container .topic_list .item .topic_type .topic {
  font-size: 24rpx;
  color: #49bcc0;
  background: #c1f0f1;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-bottom: 14rpx;
}
.container .topic_list .item .hot {
  color: #949494;
  display: flex;
}
.container .topic_list .item .hot view {
  margin-right: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.container .topic_list .item .hot .icon-xiaoxixinxihuihuahuida {
  font-size: 40rpx;
  margin-right: 8rpx;
}
.container .topic_list .item .hot .icon-02 {
  font-size: 30rpx;
  margin-right: 12rpx;
}
.container .epidemic {
  margin-top: 100rpx;
  -webkit-overflow-scrolling: touch;
  overflow: hidden;
}
.container .epidemic .sider_box {
  background: #fff;
  padding: 26rpx;
  margin-bottom: 26rpx;
  overflow: hidden;
}
.container .epidemic .sider_box .title {
  border-bottom: 1px solid #ebeaea;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 32rpx;
  font-size: 32rpx;
  position: relative;
}
.container .epidemic .sider_box .title::before {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  display: block;
  content: '';
  background: #49bcc0;
  width: 7rpx;
  height: 32rpx;
}
.container .epidemic .sider_box .data_box {
  display: flex;
}
.container .epidemic .sider_box .data_box .data_item {
  flex: 1;
  text-align: center;
  margin: 40rpx 0;
}
.container .epidemic .sider_box .data_box .data_item:nth-of-type(2) .large,
.container .epidemic .sider_box .data_box .data_item:nth-of-type(2) .small {
  color: #e9ad61;
}
.container .epidemic .sider_box .data_box .data_item:nth-of-type(3) .large,
.container .epidemic .sider_box .data_box .data_item:nth-of-type(3) .small {
  color: #000;
}
.container .epidemic .sider_box .data_box .data_item:last-of-type .large,
.container .epidemic .sider_box .data_box .data_item:last-of-type .small {
  color: #3f8c81;
}
.container .epidemic .sider_box .data_box .data_item .large {
  font-size: 42rpx;
  font-weight: 600;
  color: #d5603b;
}
.container .epidemic .sider_box .data_box .data_item .type {
  font-size: 32rpx;
  margin: 10rpx 0;
}
.container .epidemic .sider_box .data_box .data_item .small {
  font-size: 24rpx;
  color: #d5603b;
}
.container .epidemic .sider_box .data_box .data_item .small text {
  color: #949494;
}
.container .epidemic .sider_box .data_origin {
  color: #949494;
  font-size: 28rpx;
}
.container .epidemic .sider_box .data_origin .line {
  margin: 0 20rpx;
}
.container .epidemic .sider_box .grid_box,
.container .epidemic .sider_box .grid_item,
.container .epidemic .sider_box .list {
  display: flex;
  width: 100%;
  line-height: 70rpx;
}
.container .epidemic .sider_box .grid_box .item,
.container .epidemic .sider_box .grid_item .item,
.container .epidemic .sider_box .list .item {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
}
.container .epidemic .sider_box .grid_item {
  background: #f0f3f6;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}
.container .epidemic .sider_box .grid_item .first {
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 42rpx;
}
.container .epidemic .sider_box .ico {
  line-height: 60rpx;
}
.container .epidemic .sider_box .ico .iconfont {
  transition: 0.5s;
  display: block;
}
.container .epidemic .sider_box .reversal {
  transform: rotate(180deg) translateY(-10rpx);
}
.container .epidemic .sider_box .list {
  width: 100%;
}
