<view class="container">
  <view class="list">
    <view class="items">
      <view class="top">
        <view class="title">工作/实习经历</view>
        <view class="add">
          <view class="iconfont icon-jia"></view>
          <view class="" bindtap="toPage" data-path="add-work-experience">添加</view>
        </view>
      </view>
      <view class="work_experience" wx:for="{{userWork}}" wx:key="id">
        <view class="name">
          <view class="company_name">
            <view class="iconfont icon-gongsixinxi"></view>
            {{item.company_name}}
          </view>
          <view class="iconfont icon-bianji1"></view>
        </view>
        <view class="time">{{item.hiredate}} - {{item.leavedate}}</view>
        <view class="job">
          <view class="my_job">{{item.position}}</view>
          <view class="salary">{{item.salary}}元/月</view>
        </view>
        <view class="responsibility">{{item.job_description}}</view>
      </view>
    </view>
    <view class="items">
      <view class="top">
        <view class="title">教育经历</view>
        <view class="add">
          <view class="iconfont icon-jia"></view>
          <view class="" bindtap="toPage" data-path="add-education">添加</view>
        </view>
      </view>
      <view class="edu_experience" wx:for="{{userEducation}}" wx:key="id">
        <view class="name">
          <view class="school_name">
            <view class="iconfont icon-xuexiaohuaxiang"></view>{{item.school}}
          </view>
          <view class="iconfont icon-bianji1"></view>
        </view>
        <view class="time">{{item.time_enrollment}} - {{item.time_graduation}}</view>
        <view class="level">
          <view class="item">{{item.education}}</view>
          <view class="item">{{item.major}}</view>
        </view>
      </view>
    </view>
    <view class="items">
      <view class="top">
        <view class="title">自我评价</view>
        <view class="add">
          <view class="iconfont icon-bianji1"></view>
        </view>
      </view>
      <view class="self_appraisal">
        {{userInfo.advantage}}
      </view>
    </view>
  </view>
</view>