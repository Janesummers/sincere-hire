page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.container .list {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}
.container .list .items {
  margin-bottom: 80rpx;
}
.container .list .items .top {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .list .items .top .add {
  font-size: 28rpx;
  display: flex;
  align-items: center;
  height: 32rpx;
  color: #64bfba;
}
.container .list .items .top .add .iconfont {
  margin-right: 6rpx;
  font-size: 28rpx;
  height: 32rpx;
  line-height: 32rpx;
}
.container .list .items .title {
  font-size: 36rpx;
  font-weight: 500;
}
.container .list .items .time {
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #a7a5a5;
}
.container .list .items .name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  align-items: center;
  justify-content: space-between;
  display: flex;
}
.container .list .items .name > .iconfont {
  font-size: 28rpx;
  color: #64bfba;
}
.container .list .items .name .school_name,
.container .list .items .name .company_name {
  display: flex;
  align-items: center;
}
.container .list .items .name .school_name > .iconfont,
.container .list .items .name .company_name > .iconfont {
  margin-right: 10rpx;
  font-size: 36rpx;
}
.container .list .items .work_experience {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}
.container .list .items .work_experience .job {
  display: flex;
  font-size: 28rpx;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.container .list .items .work_experience .responsibility {
  font-size: 28rpx;
  color: #797676;
  line-height: 50rpx;
  margin-bottom: 40rpx;
}
.container .list .items .edu_experience {
  margin-bottom: 30rpx;
}
.container .list .items .edu_experience .level {
  display: flex;
  font-size: 28rpx;
}
.container .list .items .edu_experience .level .item {
  margin: 0 16rpx;
  position: relative;
}
.container .list .items .edu_experience .level .item::after {
  display: block;
  content: "";
  position: absolute;
  right: -16rpx;
  top: 50%;
  height: 60%;
  width: 1px;
  background: #ebeaea;
  transform: translateY(-50%);
}
.container .list .items .edu_experience .level .item:first-of-type {
  margin-left: 0;
}
.container .list .items .edu_experience .level .item:last-of-type::after {
  display: none;
}
.container .list .items .self_appraisal {
  font-size: 28rpx;
  line-height: 50rpx;
  color: #797676;
}
.container .eidt_text {
  position: fixed;
  transition: 0.5s;
  width: 100%;
  height: 100%;
  background: #fff;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding: 0 40rpx;
}
.container .eidt_text .top {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  z-index: 100;
}
.container .eidt_text .top view {
  width: 100rpx;
}
.container .eidt_text .top view.cancel {
  color: #888888;
}
.container .eidt_text .top view.save {
  color: #64bfba;
  text-align: right;
}
.container .eidt_text .title {
  font-size: 46rpx;
  font-weight: 500;
  margin-bottom: 60rpx;
}
.container .eidt_text .text textarea {
  width: 100%;
  height: 360rpx;
  border-bottom: 1px solid #e6e6e6;
  font-size: 32rpx;
}
.container .eidt_text .text .astrict {
  font-size: 28rpx;
  line-height: 100rpx;
  text-align: right;
  color: #dbdbdb;
}
.container .eidt_text .text .hint {
  font-size: 28rpx;
  color: #dbdbdb;
  line-height: 50rpx;
}
