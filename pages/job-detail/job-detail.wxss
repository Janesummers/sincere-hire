page {
  padding-bottom: 58px;
}
.container {
  padding: 0 30rpx;
}
.container .job_type {
  padding: 30rpx 0;
}
.container .job_type .job_title {
  font-size: 42rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.container .job_type .demand {
  display: flex;
  font-size: 26rpx;
  margin-bottom: 16rpx;
}
.container .job_type .demand .position {
  margin-right: 16rpx;
  position: relative;
}
.container .job_type .demand .position::after {
  display: block;
  content: "";
  position: absolute;
  right: -16rpx;
  top: 50%;
  height: 60%;
  width: 1px;
  background: #ebeaea;
  transform: translateY(-50%);
}
.container .job_type .demand .require {
  display: flex;
}
.container .job_type .demand .require .item {
  margin: 0 16rpx;
  position: relative;
}
.container .job_type .demand .require .item::after {
  display: block;
  content: "";
  position: absolute;
  right: -16rpx;
  top: 50%;
  height: 60%;
  width: 1px;
  background: #ebeaea;
  transform: translateY(-50%);
}
.container .job_type .demand .require .item:last-of-type::after {
  display: none;
}
.container .job_type .info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.container .job_type .info .create_time {
  font-size: 24rpx;
  color: #c0c0c0;
}
.container .card {
  border-top: 1px solid #ebeaea;
  padding: 40rpx 0;
}
.container .card .title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}
.container .card:last-of-type {
  border-bottom: 1px solid #ebeaea;
}
.container .job_describe .line_text {
  line-height: 52rpx;
  font-size: 26rpx;
  color: #7c7c7c;
  padding: 10rpx 0;
}
.container .hit {
  margin: 30rpx 0;
}
.container .hit .title {
  color: #f00;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.container .hit .title.iconfont {
  font-size: 28rpx;
}
.container .hit .text {
  font-size: 22rpx;
}
.container .bottom {
  position: fixed;
  bottom: 0;
  left: 50%;
  height: 58px;
  background: #fff;
  width: calc(100% - 60rpx);
  padding: 8px 0;
  box-sizing: border-box;
  transform: translateX(-50%);
  z-index: 100;
}
.container .bottom .btn {
  height: 100%;
  line-height: 42px;
  color: #fff;
  border-radius: 12rpx;
  background: #64bfba;
  text-align: center;
  font-size: 28rpx;
}
