<view class="container" hover-class="none" hover-stop-propagation="false">
  <view class="search" hover-class="none" hover-stop-propagation="false">
    <input type="text" placeholder="搜索职位" bindinput="put" bindconfirm="search" value="{{keyWord}}" />
  </view>
  <!-- <view class="" hover-class="none" hover-stop-propagation="false">
    
  </view> -->
  <view class="list">
    <view class="content">
      <view class="station" wx:for="{{station}}" wx:key="index" bindtap="toJobDetail" data-id="{{item.id}}">
        <view class="left">
          <view class="position">{{item.position}}</view>
          <view class="info">
            <view class="location">{{item.location}}</view>
            <view class="people">招聘人数：{{item.people}}</view>
            <view class="companyType">{{item.company_type}}</view>
          </view>
          <view class="company">{{item.company}}</view>
        </view>
        <view class="right">
          <view class="price">{{item.price}}</view>
          <view class="time">{{item.time}}</view>
        </view>
      </view>
    </view>
  </view>
</view>
<index-tabbar></index-tabbar>