page {
  background: #f1f1f1;
  padding-bottom: 100rpx;
  overflow: hidden;
  height: 100%;
}
.container .list {
  padding: 26rpx;
  padding-bottom: 0;
  box-sizing: border-box;
  transition: 0.3s;
  position: absolute;
  margin-bottom: 20px;
}
.container .list .line {
  height: 1px;
}
.container .list .item {
  display: flex;
  margin: 40rpx 0;
}
.container .list .item:first-of-type {
  margin-top: 0;
}
.container .list .item .img_box {
  min-width: 80rpx;
  max-width: 80rpx;
  overflow: hidden;
  height: 80rpx;
}
.container .list .item .img_box image {
  width: 100%;
  border-radius: 16rpx;
}
.container .list .item .bubble {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  position: relative;
}
.container .list .item .bubble::before {
  content: "";
  display: block;
  position: absolute;
  top: 38%;
  border-radius: 6rpx;
  border-style: solid;
  border-width: 0 20rpx 20rpx;
  border-color: transparent transparent #fff;
  width: 0;
  height: 0;
}
.container .list .item.left .bubble {
  margin-right: 0;
  margin-left: 22rpx;
}
.container .list .item.left .bubble::before {
  left: -24rpx;
  transform: translateY(-50%) rotate(-90deg);
}
.container .list .item.right {
  flex-direction: row-reverse;
}
.container .list .item.right .bubble {
  margin-left: 0;
  margin-right: 22rpx;
}
.container .list .item.right .bubble::before {
  right: -24rpx;
  transform: translateY(-50%) rotate(90deg);
}
.container .put_box {
  position: fixed;
  bottom: 0;
  transition: 0.3s;
  left: 0;
  background: #fff;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.container .put_box .put {
  width: 100%;
}
.container .put_box .put input {
  border-radius: 30px;
  height: 60rpx;
  background: #f1f1f1;
  width: 100%;
  font-size: 24rpx;
  padding-left: 26rpx;
  box-sizing: border-box;
}
