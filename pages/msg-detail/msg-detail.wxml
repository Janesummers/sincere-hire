<view class="container">
  <scroll-view 
    class="list" 
    style="height: {{height}}px;" 
    scroll-y="{{true}}" 
    scroll-into-view="{{toLast}}" 
    scroll-with-animation="{{true}}"
  >
    <view 
      class="item {{item.sendId === otherEncrypt ? 'left' : 'right'}}" 
      wx:for="{{list}}" 
      wx:key="{{index}}"
      id="item{{index}}"
    >
      <view class="img_box">
        <image src="../../images/people_girl.png" mode="widthFix"></image>
      </view>
      <view class="bubble">{{item.data}}</view>
    </view>
  </scroll-view>
  <view class="put_box" style="bottom: {{top}}px">
    <view class="put">
      <input 
        type="text" 
        placeholder="å’Œ Ta èŠèŠ" 
        value="{{sendText}}"
        bindinput="adInputChange"
        bindconfirm="bindconfirm"
        confirm-hold="{{true}}"
        confirm-type="send"
        bindfocus="test"
        bindblur="end"
        adjust-position="{{false}}"
      />
    </view>
  </view>
</view>