.container .picker {
  color: #b4b3b3;
}
.container .pickerActive {
  color: #1d1d1d;
}
.container .list {
  padding: 30rpx;
}
.container .list:last-of-type {
  margin-bottom: 0;
}
.container .list .item {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}
.container .list .item .little_title {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  color: #2b2b2b;
}
.container .list .item .text {
  font-size: 32rpx;
  font-weight: 500;
}
.container .list .item .text.flex_box {
  display: flex;
}
.container .list .item .text .block {
  margin: 0 2%;
}
.container .list .item .text .salary_text {
  width: 48%;
  text-align: center;
}
.container .list .item .text .job_require {
  width: 100%;
  height: 300rpx;
}
.container .list .item .text .selectItems {
  margin-top: 20rpx;
}
.container .list .item .text .selectItems .items {
  color: #b4b3b3;
  display: inline-block;
  padding: 8rpx 20rpx;
  border: 1px dashed #b4b3b3;
  border-radius: 19rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.container .list .item .text .selectItems .items.active {
  color: #49bcc0;
  border-color: #49bcc0;
}
.container .bottom {
  height: 58px;
  background: #fff;
  width: calc(100% - 60rpx);
  padding: 8px 0;
  box-sizing: border-box;
  margin: 0 auto;
}
.container .bottom .btn {
  height: 100%;
  line-height: 42px;
  color: #fff;
  border-radius: 12rpx;
  background: #49bcc0;
  text-align: center;
  font-size: 32rpx;
}
.container .eidt_text {
  position: fixed;
  transition: 0.5s;
  width: 100%;
  height: 100%;
  background: #fff;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding: 0 40rpx;
  z-index: 10000;
}
.container .eidt_text .top {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  z-index: 100;
}
.container .eidt_text .top view {
  width: 100rpx;
}
.container .eidt_text .top view.cancel {
  color: #888888;
}
.container .eidt_text .top view.save {
  color: #49bcc0;
  text-align: right;
}
.container .eidt_text .title {
  font-size: 46rpx;
  font-weight: 500;
  margin-bottom: 60rpx;
}
.container .eidt_text .text textarea {
  width: 100%;
  height: 360rpx;
  border-bottom: 1px solid #e6e6e6;
  font-size: 32rpx;
}
.container .eidt_text .text .hint {
  font-size: 28rpx;
  color: #929191;
  line-height: 50rpx;
}
