.impower-shadow{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10000000;
}
.impower-shadow::before {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: block;
  content: "";
  clear: both;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -2;
}
.impower-alter{
  background:#fff;
  width: 580rpx;
  overflow:hidden;
  border-radius:8rpx;
  padding:0 40rpx;
  box-sizing:border-box;
}
.impower-alter .top{
  border-bottom:2rpx solid #ccc;
  display:flex;
  align-items:center;
  padding:30rpx 0;
}
.impower-alter .top .text{
  font-size:28rpx;
  margin-left:30rpx;
}
.impower-alter .title{
  font-size: 40rpx;
  margin-top: 30rpx;
}
.impower-alter .head{
  width: 80rpx;
  height: 80rpx;
  /* border-radius:50%; */
  overflow:hidden;
  display:flex;
  justify-content:center;
  align-items:center;
}
.impower-alter .head image{
  width: 100%;
  height: 100%;
}
.impower-alter .content{
  font-size: 32rpx;
  color: #ccc;
  margin: 40rpx 0;
}
.impower-alter .content .item{
  padding-left: 40rpx;
  position: relative;
}
.impower-alter .content .item::after{
  content: "";
  display: block;
  clear: both;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ccc;
  position: absolute;
  left: 0;
  top: calc(50% - 8rpx);
}
.impower-alter button{
  font-size: 32rpx;
  color: #10b318;
  background: transparent;
  border-radius: 0;
  padding: 0;
  width: 100rpx;
  margin: 0;
  float: right;
  margin-bottom: 20rpx;
}
.impower-alter button::after{
  border-radius: 0; 
  border: none;
  
}
